@page
@model SWTlib.Pages.IndexModel

@{
    ViewData["Title"] = "Home page";
}

    <div class="row">
        <div class="col-md-12">
            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-action="Login" asp-controller="Account" class="btn btn-default">Log In with Gitlab</a>
            }
            else
            {
                <div class="row">
                    <div class="col-md-2">
                        <img src="@Model.GitlabAvatar" alt="" class="img-thumbnail" />
                    </div>
                    <div class="col-md-10">
                        <h4>@Model.GitlabName</h4>
                        <p><i class="fab fa-gitlab"></i><a href="@Model.GitlabUrl">@Model.GitlabLogin</a></p>
                    </div>
                </div>
            }
        </div>
    </div>