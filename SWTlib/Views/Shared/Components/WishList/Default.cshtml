@model IEnumerable<LibraryData.Models.WishListEntry>


    <div class="border-top-0 border-dark bg-light p-0 shadow">
        <div class="m-0 p-0">
            <table class="table mb-0">
                <thead class="bg-swt-primary text-white border">
                    <tr>
                        <th class="text-center">
                            Nr.
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ISBN)
                        </th>
                        <th>
                            Author(s)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="border">
                    @foreach (var item in Model)
                {
                    <tr class="pt-2 pb-2">
                        <td class="text-center align-middle">
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ISBN)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.AuthorName)
                        </td>
                        <td>
                            <form asp-action="ArrowUp" asp-controller="WishList" method="post" asp-route-id="@item.Id">
                                <div class="text-center">
                                    <button type="submit" class="btn clean-link arrow-hover p-0">
                                        <i class="fas fa-chevron-up"></i>
                                    </button>
                                </div>
                            </form>
                            <form asp-action="ArrowDown" asp-controller="WishList" method="post" asp-route-id="@item.Id">
                                <div class="text-center">
                                    <button type="submit" class="btn clean-link arrow-hover p-0">
                                        <i class="fas fa-chevron-down"></i>
                                    </button>
                                </div>
                            </form>
                        </td>
                        <td class="align-middle text-right">
                            <form asp-action="Delete" asp-controller="WishList" method="post" asp-route-id="@item.Id">
                                <div class="text-center">
                                    <button type="submit" class="bg-transparent border-0 btn-rating">
                                        <i class="fas fa-window-close fa-2x thumb-red"></i>
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
