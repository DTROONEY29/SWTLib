@model LibraryData.Models.Rental

@{
    ViewData["Title"] = "EXTEND RENTAL";
}

<!-- Breadcrumb Navigation-->
<ul class="breadcrumb bg-white">
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Rental" asp-action="Index">Rentals</a></li>
    <li class="breadcrumb-item active">Extend Rental</li>
</ul>

<!-- Main Content -->
<h2>Extend your existing Rental</h2>

<br />
<hr />
<div class="row">
    <div class="w-100">
        <div class="d-flex flex-row align-items-center">
            <div class="w-25"></div>
            <div class="w-25 text-left"><h4>Title</h4></div>
            <div class="w-50 text-center"><h4>@Model.Book.Title</h4></div>
        </div>
        <br />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group d-flex flex-row align-items-center">
                <label asp-for="ReturnDate" class="control-label w-50 text-center">Please select your return date:</label>
                <div class="w-50 text-center pl-5 pr-5">
                    <select asp-for="ReturnDate" asp-items="ViewBag.ReturnDate" class="form-control text-center">
                        <option value="">-- Select Duration --</option>
                    </select>
                    <div id="returndate"></div>
                </div>
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="pl-3 pr-3 pb-2 pt-1"><hr /></div>

            <div class="d-flex justify-content-end">
                <div class="form-group mt-3 mr-5">
                    @{
                        if (Model.ExtendedRental == false)
                        {
                            <input type="submit" value="Extend" class="btn swt-button" />
                        }
                        else
                        {
                            <div class="d-flex flex-row">
                                <div class="align-self-center mr-3 text-danger">You've already extended your rental once. Please return your book in time.</div>
                                <div><button type="button" class="btn swt-button" disabled>Extend</button></div>
                            </div>
                            
                        }
                    }
                </div>
            </div>
        </form>
    </div>
</div>

