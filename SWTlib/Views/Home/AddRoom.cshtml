@model LibraryData.Models.Location

@{
    ViewData["Title"] = "ADD ROOM";
}

<!-- Breadcrumb Navigation-->
<ul class="breadcrumb bg-white">
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="AddContent">Add Content</a></li>
    <li class="breadcrumb-item active">Add Room</li>
</ul>


<!-- Main Content -->
<h4>Add Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LocationName" class="control-label">Room number:</label>
                <input asp-for="LocationName" class="form-control" placeholder="e.g.: 'WE5/03.051'" />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AddContent">Back to List</a>
</div>

