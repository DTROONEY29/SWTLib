@model IEnumerable<LibraryData.Models.Location>

@{
    ViewData["Title"] = "DELETE ROOM";
}

<h1>Delete Room</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Room number:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>                
                <form asp-action="DeleteRoom" asp-route-id="@item.Id">
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-dark" />
                    </div>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="AddContent">Back to List</a>
</div>
