@model LibraryData.Models.WishListEntry

@{
    ViewData["Title"] = "WISHLIST";
}

@await Component.InvokeAsync("WishList")

<br />
<hr class="mb-0"/>

<div class="modal-header">
    <h3>Add a Book to the Wishlist:</h3>
</div>
<div class="table pt-4">
    <div class="m-4">
        <form asp-action="Create" method="post">
            <div class="d-flex flex-row mb-4">
                <div class="col-5"><label asp-for="Title" class="control-label"></label></div>
                <div class="w-100">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row mb-4">
                <div class="col-5"><label asp-for="ISBN" class="control-label"></label></div>
                <div class="w-100">
                    <input asp-for="ISBN" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row mb-4">
                <div class="col-5"><label asp-for="AuthorName" class="control-label">Author(s)</label></div>
                <div class="w-100">
                    <input asp-for="AuthorName" class="form-control" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row">
                <div class="col-5"></div>
                <div class="d-flex w-100 justify-content-around">
                    <div class="form-group mt-3">
                        <a type="button" href="mailto:example@gmail.com?subject=Buchbestellung&body=@string.Join(",", ViewBag.WishList)" class="btn swt-button">Generate Email</a>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Create Wish" class="btn swt-button" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




